@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Admin Dashboard";
}
@model IEnumerable<DACS.Models.DatLichKham>
<link href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
<style>
    .dashboard {
        max-width: 1200px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .overview, .appointments, .patients {
        margin-bottom: 20px;
        padding: 10px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
    }

        .overview h2, .appointments h2, .patients h2 {
            margin-top: 0;
            margin-bottom: 10px;
            font-size: 1.5em;
        }

    p {
        margin-top: 0;
        margin-bottom: 10px;
    }

    canvas {
        max-width: 100%;
        height: auto;
    }
</style>
<div class="dashboard">
    <div class="overview">
        <h2>Tổng quan</h2>
        <p>Tổng số bệnh nhân hiện đang điều trị: <span id="total-patients">100</span></p>
        <p>Tổng số nhân viên: <span id="total-staff">50</span></p>
        <!-- Các thông tin khác -->
    </div>
    <div class="patients">
        <h2>Bệnh nhân</h2>
        <canvas id="patientChart"></canvas>
    </div>
</div>
<script>
    var ctx = document.getElementById('patientChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Ngày 1', 'Ngày 2', 'Ngày 3', 'Ngày 4', 'Ngày 5', 'Ngày 6', 'Ngày 7'],
            datasets: [{
                label: 'Số lượng bệnh nhân',
                data: [12, 19, 3, 5, 2, 3, 7],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(54, 162, 235, 0.2)',
                    'rgba(255, 206, 86, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(153, 102, 255, 0.2)',
                    'rgba(255, 159, 64, 0.2)',
                    'rgba(255, 99, 132, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(54, 162, 235, 1)',
                    'rgba(255, 206, 86, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(153, 102, 255, 1)',
                    'rgba(255, 159, 64, 1)',
                    'rgba(255, 99, 132, 1)'
                ],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>