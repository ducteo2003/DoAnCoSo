@model DACS.Models.BacSi

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style >
    .doctor-profile {
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .doctor-profile .img-fluid {
        width: 100%;
        height: auto;
    }

    .doctor-name {
        color: #007bff;
        font-size: 1.5rem;
        margin-bottom: 10px;
    }

    .doctor-details p {
        margin-bottom: 5px;
    }

    .appointment-booking .form-control {
        max-width: 300px;
    }

    .back-to-home .btn {
        background-color: #007bff;
        color: #fff;
    }
</style>
<div class="doctor-profile">
    <div class="doctor-info">
        <img src="@Model.ImageUrl" style="width: 150px; height: 150px; border-radius: 50%;" alt="Doctor profile picture" />
        <div class="doctor-details">
            <h4>Dr. @Model.Name</h4>
            <p><b>Khoa:</b> @Model.Khoa.Name</p>
            <p><b>Giới Thiệu:</b>@Model.GioiThieu</p>
            <p><b>Kinh Nghiệm:</b>@Model.KinhNghiem</p>
        </div>
    </div>
    <div class="appointment-booking">
        <label for="selectedDate">Chọn Ngày Khám:</label>
        <input type="date" id="selectedDate" name="selectedDate" onchange="loadSchedules(this.value)" />
        <div id="scheduleList"></div>
    </div>
</div>
<div class="back-to-home">
    <a asp-action="Index" asp-controller="Home">Trở Về trang chủ</a>
</div>
@section Scripts {
    <script>
        function loadSchedules(selectedDate) {
            var bacsiId = @Model.Id;
            var url = '@Url.Action("GetWorkSchedules", "BacSis")' + `?doctorId=${bacsiId}&selectedDate=${selectedDate}`;
            $.get(url, function (data) {
                $('#scheduleList').html(data);
            });
        }
    </script>
}