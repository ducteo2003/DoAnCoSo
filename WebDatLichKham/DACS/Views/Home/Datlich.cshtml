        .big-text {
            font-size: 3rem;
            padding: 10px;
        }

        .medium-text {
            font-size: 2rem;
            padding-bottom: 10px;
        }

     
        .card {
            border: 1px solid #ddd;
            margin: 5px;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            padding: 8px;
            border-bottom: 1px solid #eee;
        }

        .card-img-top {
