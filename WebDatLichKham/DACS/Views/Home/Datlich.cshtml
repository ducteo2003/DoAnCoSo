        /* Search bar styling */
        .search-bar {
            position: relative;
            margin: 20px;
            height: 75px; /* Chiều cao của thanh tìm kiếm */
        }

            .search-bar input[type="text"] {
                width: 100%;
                padding: 10px 20px 10px 40px;
                font-size: 16px;
                border: 2px solid #ccc;
                border-radius: 20px;
                box-sizing: border-box;
                transition: all 0.3s;
            }

                .search-bar input[type="text"]:focus {
                    border-color: #66afe9;
                    outline: none;
                    box-shadow: 0 0 8px rgba(102, 175, 233, .6);
                }

            .search-bar .bi-search {
                position: absolute;
                left: 10px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 20px;
                color: #ccc;
            }

        /* Container styling */
        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .text-center {
            text-align: center;
        }

        .my-10 {
            margin-top: 10px;
            margin-bottom: 10px;
