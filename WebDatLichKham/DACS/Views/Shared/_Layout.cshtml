@using Microsoft.AspNetCore.Identity
@using WebDatLichKham.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DoAnCoSo</title>
       <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- add favicon -->
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="msapplication-TileImage" content="./assets/favicon/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <!-- EMBED fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;500;600;700&family=Sora:wght@300;400;500;600;700;800&display=swap"
          rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
          rel="stylesheet" />
   
    <title>Test</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <!-- reset css -->
    <link href="~/css/reset.css" rel="stylesheet" />
    <title>Bệnh  viện  Nguyễn Trãi</title>
</head>

<body>
    <!-- header -->
    <header class="header">
        <div class="container">
            <div class="header-top">
                <!-- logo -->
                <a asp-action="DatLich" asp-controller="Home"><img src="/Images/logo.jpg" alt="shine smile" class="logo" style="width: 100px; height: 50px;"></a>
                <!-- nav -->
                <nav class="navbar">
                    <ul class="navbar__list">
                        <li class="navbar__item">
                            <a asp-action="Index" asp-controller="Home" class="navbar__link navbar__link--active">Trang Chủ</a>
                        </li>
                        <li class="navbar__item">
                            <a asp-action="Datlich" asp-controller="Home" class="navbar__link">Đặt lịch</a>
                        </li>
                  
                        <li class="navbar__item">
                            <a href="#!" class="navbar__link">Bác Sĩ</a>
                        </li>
                    </ul>
                </nav>
                <!-- cta action -->
                <div class="header__action">
             
                    <a class="dropdown-toggle text-dark" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle text-white" style="font-size: 24px;"></i>
                    </a>
                    <div class="dropdown-menu bg-dark text-white" aria-labelledby="navbarDropdown3">
                        <ul class="list-unstyled mb-0">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item" style="padding-left: 9px;">
                                    @if (User.IsInRole("Custommer"))
                                    {
                                        <a id="manage" class="nav-link p-0 text-white" asp-controller="Admin" asp-action="Index" title="Manage">Quản Lý</a>
                                    }
                                    else
                                    {
                                        <a id="manage" class="nav-link p-0 text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Thông Tin</a>
                                    }
                                </li>
                                <li class="nav-item p-0">
                                    <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Datlich", "Home", new { area = "" })">
                                        <button id="logout" type="submit" class="nav-link p-0 text-white">Đăng xuất</button>
                                    </form>
                                </li>
                            }
                          
                        </ul>
                    </div>
                </div>

            </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <section class="footer">
