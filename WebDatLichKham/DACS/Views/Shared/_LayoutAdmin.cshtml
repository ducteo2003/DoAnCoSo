@using Microsoft.AspNetCore.Identity
@using WebDatLichKham.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .sidebar {
            position: fixed;
            top: 0;
            bottom: 0;
            left: 0;
            width: 250px;
            background-color: #343a40;
            color: white;
            overflow-y: auto;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .navbar {
            background-color: #f8f9fa;
            padding: 10px 20px;
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

            .sidebar ul li a {
                color: white;
                padding: 10px 15px;
                text-decoration: none;
                display: block;
            }

                .sidebar ul li a:hover {
                    background-color: #007bff;
                }

                .sidebar ul li a .fas {
                    margin-right: 10px;
                }

        .dropdown-item {
            color: #ffffff; /* Set the text color */
            background-color: #007bff; /* Set the background color */
            transition: background-color 0.3s, color 0.3s; /* Smooth transition for hover effects */
        }

            .dropdown-item:hover {
                background-color: #0056b3; /* Darker shade for hover state */
                color: #ffff00; /* Change text color on hover */
            }

            /* Specific color styles for each type of appointment status */
            .dropdown-item.index {
                background-color: #28a745;
            }
            /* Green for general management */
            .dropdown-item.index-wait {
                background-color: #ffc107;
            }
            /* Yellow for waiting confirmation */
            .dropdown-item.index-confirm {
                background-color: #17a2b8;
            }
            /* Teal for waiting to be examined */
            .dropdown-item.index-examin {
                background-color: #007bff;
            }
            /* Blue for examined */
            .dropdown-item.index-cancelled {
                background-color: #dc3545;
            }

        .btn-primary {
            background-color: #007bff; /* Primary color for the button */
            border-color: #007bff; /* Border color matches the background */
            color: #ffffff; /* White text color */
            transition: background-color 0.3s, border-color 0.3s, color 0.3s; /* Smooth transition for hover effects */
        }

            .btn-primary:hover, .btn-primary:focus {
                background-color: #0056b3; /* Darker shade for hover state */
                border-color: #0056b3; /* Matching border color for hover */
                color: #ffff00; /* Change text color to yellow on hover for emphasis */
            }

            .btn-primary i {
                margin-right: 5px; /* Space between the icon and text */
            }

        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="text-center">
            <a asp-action="DatLich" asp-controller="Home" class="text-center d-block">
                <img src="/Images/logo.jpg" alt="Logo" style="width: 100px; height: 50px; margin-top: 10px;">
            </a>
            
        </div>
        <ul>
            <li><a href="@Url.Action("Index", "Admin")"><i class="fas fa-home"></i>Dashboard</a></li>
            <li><a href="@Url.Action("IndexTinYte", "Admin")"><i class="fas fa-cog"></i>quản lý Tin Y tế</a></li>
            <li><a href="@Url.Action("IndexBenhNhan", "Admin")"><i class="fas fa-users"></i>Quản lý bệnh nhân</a></li>
            @if(User.IsInRole("Admin"))
            {
                <li>
                    <a href="@Url.Action("IndexDoctor", "Admin")"><i class="fas fa-user-md"></i>Quản lý bác sĩ</a>
                </li>
                <li>
                    <a href="@Url.Action("IndexKhoa", "Admin")"><i class="fas fa-hospital"></i> Quản lý chuyên khoa</a>
                </li>
                <li>
                    <a href="@Url.Action("IndexChucVu", "Admin")"><i class="fas fa-briefcase"></i> Quản lý chức vụ</a>
                </li>
                <li>
                    <a href="@Url.Action("IndexLichLamViec", "Admin")"><i class="fas fa-calendar-alt"></i>Quản lý lịch làm việc</a>
                </li>
            }
         
            <li>
                <div class="dropdown">
                    <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown"><i class="fas fa-calendar-check"></i>Quản lý đặt lịch khám</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item index" href="@Url.Action("Index", "DatLichKhams")">Quản lý lịch khám bệnh</a></li>
                        <li><a class="dropdown-item index-wait" href="@Url.Action("IndexWaitForConfirm", "DatLichKhams")">Lịch đang chờ xác nhận</a></li>
                        <li><a class="dropdown-item index-confirm" href="@Url.Action("IndexConfirm", "DatLichKhams")">Lịch đang chờ khám</a></li>
                        <li><a class="dropdown-item index-examin" href="@Url.Action("IndexExamin", "DatLichKhams")">Lịch đã khám</a></li>
                        <li><a class="dropdown-item index-cancelled" href="@Url.Action("IndexCancelled", "DatLichKhams")">Lịch đã hủy</a></li>
                    </ul>
                </div>
            </li>
            @if (User.IsInRole("Admin"))
            {
                <li>
                    <a href="@Url.Action("AddChucVu", "Admin")"><i class="fas fa-plus-square"></i> Thêm Chức Vụ</a>
                </li>

                <li>
                    <button class="btn btn-primary" onclick="location.href='@Url.Page("/Account/Register", null, new { area = "Identity" })'">
                    <i class="bi bi-person-plus-fill"></i> Đăng Ký
                </button>
            </li>
            }
        </ul>
    </div>
    <div class="main-content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">Trang Chủ</a>
                        </li>
                      
                    </ul>
                </div>
            </div>
        </nav>



        @RenderBody()
    </div>
    <!-- End Main Content -->
    <!-- jQuery and Bootstrap Bundle (includes Popper) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>