@model DACS.Models.ChucVu

@{
    ViewData["Title"] = "Xóa Chức Vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title">Xóa Chức Vụ</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-center">Bạn có chắc chắn muốn xóa mục này không?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">Tên chức vụ:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>
                    <form id="deleteForm" asp-action="DeleteChucVu" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Xóa</button>
                            <a asp-action="IndexChucVu" class="btn btn-secondary ml-2">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script>
        document.getElementById("deleteForm").addEventListener("submit", function (event) {
            event.preventDefault();
            var form = this;

            Swal.fire({
                title: 'Bạn có chắc chắn?',
                text: "Bạn sẽ không thể hoàn tác hành động này!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Xóa',
                cancelButtonText: 'Hủy'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Show success message
                    Swal.fire(
                        'Đã xóa!',
                        'Bản ghi đã được xóa.',
                        'success'
                    ).then(() => {
                        // Submit the form after user clicks OK
                        form.submit();
                    });
                }
            });
        });
    </script>
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
