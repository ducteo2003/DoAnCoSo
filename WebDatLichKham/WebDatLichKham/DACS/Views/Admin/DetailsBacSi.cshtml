@model DACS.Models.BacSi

@{
    ViewData["Title"] = "Chi tiết bác sĩ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center mb-4">Chi tiết bác sĩ</h1>

<div class="card mb-4 shadow-lg">
    <div class="row no-gutters">
        <div class="col-md-4">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" class="card-img-top img-fluid rounded-start" alt="Ảnh bác sĩ" style="height: 100%; object-fit: cover;">
            }
            else
            {
                <img src="https://via.placeholder.com/400" class="card-img-top img-fluid rounded-start" alt="Không có hình ảnh">
            }
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title text-primary">@Model.Name</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Giới tính</dt>
                    <dd class="col-sm-8">@Model.GioiTinh</dd>

                    <dt class="col-sm-4">Ngày sinh</dt>
                    <dd class="col-sm-8">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-4">Chức vụ</dt>
                    <dd class="col-sm-8">@Model.ChucVu?.Name</dd>

                    <dt class="col-sm-4">Chuyên khoa</dt>
                    <dd class="col-sm-8">@Model.Khoa?.Name</dd>

                    <dt class="col-sm-4">Địa chỉ</dt>
                    <dd class="col-sm-8">@Model.DiaChi</dd>

                    <dt class="col-sm-4">Số điện thoại</dt>
                    <dd class="col-sm-8">@Model.SoDienThoai</dd>

                    <dt class="col-sm-4">Giới thiệu</dt>
                    <dd class="col-sm-8">@Model.GioiThieu</dd>

                    <dt class="col-sm-4">Kinh nghiệm</dt>
                    <dd class="col-sm-8">@Model.KinhNghiem</dd>

                    <dt class="col-sm-4">Học vấn</dt>
                    <dd class="col-sm-8">@Model.HocVan</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3 text-right">
    <a class="btn btn-secondary" asp-action="IndexDoctor"><i class="fa fa-arrow-left"></i> Quay lại danh sách</a>
</div>

