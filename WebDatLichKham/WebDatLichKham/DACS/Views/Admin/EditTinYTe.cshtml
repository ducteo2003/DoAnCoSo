@model DACS.Models.TinYTe

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewBag.Title = "Chỉnh sửa Tin Y Tế";
}

<h2 class="text-center mb-4">Chỉnh sửa Tin Y Tế</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="EditTinYTe" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="NgayDang" />

                        <div class="form-group">
                            <label asp-for="TieuDe" class="font-weight-bold">Tiêu Đề</label>
                            <input asp-for="TieuDe" class="form-control" placeholder="Nhập tiêu đề tin y tế" />
                            <span asp-validation-for="TieuDe" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NoiDung" class="font-weight-bold">Nội Dung</label>
                            <textarea asp-for="NoiDung" class="form-control" rows="5" placeholder="Nhập nội dung tin y tế"></textarea>
                            <span asp-validation-for="NoiDung" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImageUrl" class="font-weight-bold">Hình Ảnh Tin Tức</label>
                            <input type="file" asp-for="ImageUrl" class="form-control" />
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <div class="mt-2">
                                    <img src="@Url.Content(Model.ImageUrl)" alt="Hình ảnh hiện tại" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                                </div>
                            }
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Lưu thay đổi</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container {
        margin-top: 50px;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .card-body {
        padding: 30px;
    }

    .form-group label {
        font-size: 1.1em;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
