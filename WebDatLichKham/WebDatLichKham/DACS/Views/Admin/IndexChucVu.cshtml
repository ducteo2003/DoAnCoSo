@model IEnumerable<DACS.Models.ChucVu>

@{
    ViewData["Title"] = "Quản lý chức vụ";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center">Quản lý chức vụ</h1>

<p class="text-right">
    <a class="btn btn-primary" asp-action="AddChucVu"><i class="fa fa-plus"></i> Tạo mới chức vụ</a>
</p>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Tên chức vụ</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        
                        <a class="btn btn-danger btn-sm" asp-action="DeleteChucVu" asp-route-id="@item.Id">
                            <i class="fa fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

