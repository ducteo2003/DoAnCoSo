@model IEnumerable<DACS.Models.TinYTe>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center">Quản lý tin y tế</h1>

<p class="text-right">
    <a class="btn btn-primary" asp-action="AddTinYTe"><i class="fa fa-plus"></i> Thêm tin y tế</a>
</p>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Tiêu đề</th>
                <th>Ngày đăng</th>
                <th>Hình ảnh</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tinYTe in Model)
            {
                <tr>
                    <td>@tinYTe.Id</td>
                    <td>@tinYTe.TieuDe</td>
                    <td>@tinYTe.NgayDang.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (!string.IsNullOrEmpty(tinYTe.ImageUrl))
                        {
                            <img src="@Url.Content(tinYTe.ImageUrl)" alt="Hình ảnh" class="img-thumbnail" style="max-width: 100px; max-height: 100px;" />
                        }
                        else
                        {
                            <span>Không có hình ảnh</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-action="EditTinYTe" asp-route-id="@tinYTe.Id">
                            <i class="fa fa-edit"></i> Sửa
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="DeleteTinYTe" asp-route-id="@tinYTe.Id">
                            <i class="fa fa-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

