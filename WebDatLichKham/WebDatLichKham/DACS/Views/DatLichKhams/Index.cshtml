@model IEnumerable<DACS.Models.DatLichKham>

@{
    ViewData["Title"] = "Quản lý Đặt Lịch Khám";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="text-center">Quản lý Đặt Lịch Khám</h1>

<div class="table-responsive">
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Tên bệnh nhân</th>
                <th>Số điện thoại</th>
                <th>Ca làm việc</th>
                <th>Tên bác sĩ</th>
                <th>Ngày đặt lịch</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.BenhNhan.Name</td>
                    <td>@item.BenhNhan.SoDienThoai</td>
                    <td>@item.LichLamViec.Ca</td>
                    <td>@item.LichLamViec.BacSi.Name</td>
                    <td>@item.NgayDatLich.ToString("dd/MM/yyyy")</td>
                    <td class="status" data-status="@item.TrangThai">@item.TrangThai</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-iKbFDOA/lczAedlPPLBbUlL9wAE60wvCoOq2Id1AR3dsDBFRfSA8LjUl/biTNL0H" crossorigin="anonymous">

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.status').each(function () {
                var status = $(this).data('status');
                switch (status) {
                    case 'Đang chờ xác nhận':
                        $(this).css('color', '#FFD700');
                        break;
                    case 'Đã xác nhận':
                        $(this).css('color', 'green');
                        break;
                    case 'Đã khám':
                        $(this).css('color', 'blue');
                        break;
                    case 'Đã hủy':
                        $(this).css('color', 'red');
                        break;
                    default:
                        $(this).css('color', 'black');
                }
            });
        });
    </script>
}
